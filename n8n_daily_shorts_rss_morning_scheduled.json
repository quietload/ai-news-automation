{
  "name": "News Automation - Daily Shorts RSS Noon (Scheduled)",
  "nodes": [
    {
      "parameters": {
        "rule": {
          "interval": [
            {
              "triggerAtHour": 11,
              "triggerAtMinute": 50
            }
          ]
        }
      },
      "id": "1",
      "name": "Daily 11:50AM",
      "type": "n8n-nodes-base.scheduleTrigger",
      "typeVersion": 1.2,
      "position": [250, 200]
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "caseSensitive": true,
            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "leftValue": "={{ $now.weekday }}",
              "rightValue": 0,
              "operator": {
                "type": "number",
                "operation": "notEquals"
              }
            },
            {
              "leftValue": "={{ $now.weekday }}",
              "rightValue": 1,
              "operator": {
                "type": "number",
                "operation": "notEquals"
              }
            }
          ],
          "combinator": "and"
        }
      },
      "id": "2",
      "name": "Skip Sun-Mon (US Weekend)",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [450, 200]
    },
    {
      "parameters": {
        "command": "C:\\Users\\USER\\AppData\\Local\\Python\\pythoncore-3.14-64\\python.exe D:\\workspace\\news\\run_daily_shorts_rss_morning.py"
      },
      "id": "3",
      "name": "Run Daily Shorts RSS Morning",
      "type": "n8n-nodes-base.executeCommand",
      "typeVersion": 1,
      "position": [700, 180],
      "onError": "continueErrorOutput"
    },
    {
      "parameters": {
        "sendTo": "YOUR_EMAIL@gmail.com",
        "subject": "✅ [News Automation] Daily Shorts (Noon) - Success",
        "message": "Daily Shorts (Noon) generated successfully!\n\nTime: {{ $now.format('yyyy-MM-dd HH:mm:ss') }} KST\nType: US Primetime Shorts\n\nOutput:\n{{ $json.stdout }}"
      },
      "id": "4",
      "name": "Email Success",
      "type": "n8n-nodes-base.emailSend",
      "typeVersion": 2.1,
      "position": [950, 100],
      "credentials": {
        "smtp": {
          "id": "YOUR_SMTP_CREDENTIAL_ID",
          "name": "Gmail SMTP"
        }
      }
    },
    {
      "parameters": {
        "sendTo": "YOUR_EMAIL@gmail.com",
        "subject": "❌ [News Automation] Daily Shorts (Noon) - FAILED",
        "message": "Daily Shorts (Noon) generation FAILED!\n\nTime: {{ $now.format('yyyy-MM-dd HH:mm:ss') }} KST\nType: US Primetime Shorts\n\nError:\n{{ $json.stderr }}\n\nPlease check the logs."
      },
      "id": "5",
      "name": "Email Failure",
      "type": "n8n-nodes-base.emailSend",
      "typeVersion": 2.1,
      "position": [950, 260],
      "credentials": {
        "smtp": {
          "id": "YOUR_SMTP_CREDENTIAL_ID",
          "name": "Gmail SMTP"
        }
      }
    }
  ],
  "connections": {
    "Daily 11:50AM": {
      "main": [
        [
          {
            "node": "Skip Sun-Mon (US Weekend)",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Skip Sun-Mon (US Weekend)": {
      "main": [
        [
          {
            "node": "Run Daily Shorts RSS Morning",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Run Daily Shorts RSS Morning": {
      "main": [
        [
          {
            "node": "Email Success",
            "type": "main",
            "index": 0
          }
        ],
        [
          {
            "node": "Email Failure",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "settings": {
    "executionOrder": "v1",
    "timezone": "Asia/Seoul"
  }
}
